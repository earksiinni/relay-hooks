{
  "name": "relay-hooks",
  "version": "3.4.0",
  "keywords": [
    "graphql",
    "relay",
    "hooks",
    "react",
    "ssr"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "es/index.js",
  "license": "MIT",
  "description": "Relay Hooks",
  "author": {
    "name": "morrys"
  },
  "homepage": "https://relay-tools.github.io/relay-hooks/docs/relay-hooks.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/relay-tools/relay-hooks"
  },
  "scripts": {
    "clean": "rimraf lib es",
    "compile": "npm run clean && tsc && tsc --module ES2015 --target ES2015 --outDir es",
    "build": "npm run compile && npm run test",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "format": "prettier --write \"src/**/*.{j,t}s*\"",
    "format:ci": "prettier --list-different \"src/**/*.{j,t}s*\"",
    "eslint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@restart/hooks": "^0.3.1",
    "fbjs": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "relay-runtime": ">=8.0.0"
  },
  "devDependencies": {
    "cross-env": "6.0.3",
    "typescript": "3.5.1",
    "react": "16.11.0",
    "graphql": "^14.2.0",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "relay-runtime": "^9.0.0",
    "react-test-renderer": "16.11.0",
    "relay-test-utils": "9.0.0",
    "relay-test-utils-internal": "9.0.0",
    "@types/jest": "24.0.18",
    "ts-jest": "24.1.0",
    "jest": "24.9.0",
    "promise-polyfill": "6.1.0",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-import-resolver-typescript": "2.0.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-json": "2.1.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "lerna": "^3.16.4",
    "prettier": "1.19.1",
    "rimraf": "^2.5.4",
    "@types/node": "13.9.3"
  }
